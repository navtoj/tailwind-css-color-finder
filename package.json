{
	"name": "tailwind-css-color-finder",
	"displayName": "Tailwind CSS Color Finder",
	"description": "Find the closest tailwind color for a hex value in your code.",
	"version": "0.0.1",
	"publisher": "navtoj",
	"engines": {
		"vscode": "^1.98.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/navtoj/tailwind-css-color-finder"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tailwind-css-color-finder.replace",
				"title": "Replace selection with Tailwind CSS color(s).",
				"enablement": "editorHasSelection && !editorReadonly"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "tailwind-css-color-finder.replace",
					"when": "editorHasSelection && !editorReadonly"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/color-diff": "^1.2.5",
		"@types/mocha": "^10.0.10",
		"@types/node": "^18.19.84",
		"@types/vscode": "^1.98.0",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^8.57.1",
		"typescript": "^5.8.2"
	},
	"dependencies": {
		"color-diff": "^1.4.0",
		"tailwindcss": "^3.4.17"
	}
}
